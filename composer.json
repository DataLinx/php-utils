{
    "name": "datalinx/php-utils",
    "description": "Collection of common helper functions",
    "keywords": ["php", "helpers", "utilities"],
    "homepage": "https://github.com/datalinx/php-utils",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DataLinx\\PhpUtils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DataLinx\\PhpUtils\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "DataLinx",
            "email": "info@datalinx.si"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "picqer/php-barcode-generator": "^2.2"
    },
    "suggest": {
        "picqer/php-barcode-generator": "Required to use FluentBarcode"
    }
}
